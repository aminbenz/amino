{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@feat/*": ["src/features/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/services/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["src/styles/*"],
      "@components": ["src/components/"],
      "@helpers/*": ["src/helpers/*"],
      "@data/*": ["src/data/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/helpers/theme.js",
    "src/components/index.js",
    "src/components/index.js",
    "app/artist/LoginButton.jsx",
    "app/users/[user_id]",
    "app/api/salem/route.ts"
  ],
  "exclude": ["node_modules"]
}
